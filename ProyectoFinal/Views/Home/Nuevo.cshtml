@model Publicacion
@{
    ViewData["Title"] = "Nuevo Post";
    ViewData["TitleHeader"] = "Nuevo post";
    ViewData["SubTitleHeader"] = "Creando un nuevo post";
    ViewData["imagen"] = "/assets/img/about-bg.jpg";
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <p>Complete el formulario para dar de alta el artículo</p>
            <div class="my-5">
                <form asp-action="Add">
                    <partial name="_FormPublicacion" model="@Model" />
                    <button type="submit" value="Nuevo" class="btn btn-outline-primary text-uppercase">Crear</button>
                </form>
            </div>
        </div>
    </div>
</div>